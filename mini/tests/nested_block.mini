/* nested block example */
program nested_block:
    declare (a, b, c) integer;

    set a := 42;
    set b := 10;
    set c := -100;

    l1 : begin
       declare (a, b, c) boolean;

       set a := true;
       set b := false;

       output "a=", a;
       output "b=", b;

    end l1;

    l2 : begin
       declare (a, b, c) float;

       set a := 1.5;
       set b := 2.5;
       set c := 3.99;

       output "a=", a;
       output "b=", b;
       output "c=", c;

    end l2;

    output "a=", a;
    output "b=", b;
    output "c=", c;

    return;
end program labeled_block;
