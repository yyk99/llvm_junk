{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "linux",
      "hidden": true,
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug",
      "description": "Debug build with tests enabled",
      "inherits": "linux",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON"
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Release build without tests",
      "inherits": "linux",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTS": "OFF"
      }
    },
    {
      "name": "debug-no-tests",
      "displayName": "Debug (No Tests)",
      "description": "Debug build without tests for faster compilation",
      "inherits": "linux",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "OFF"
      }
    },
    {
      "name": "release-with-tests",
      "displayName": "Release (With Tests)",
      "description": "Release build with tests enabled",
      "inherits": "linux",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "displayName": "Build Debug",
      "description": "Build the debug configuration"
    },
    {
      "name": "release",
      "configurePreset": "release",
      "displayName": "Build Release",
      "description": "Build the release configuration"
    },
    {
      "name": "debug-no-tests",
      "configurePreset": "debug-no-tests",
      "displayName": "Build Debug (No Tests)",
      "description": "Build debug without tests"
    },
    {
      "name": "release-with-tests",
      "configurePreset": "release-with-tests",
      "displayName": "Build Release (With Tests)",
      "description": "Build release with tests"
    }
  ],
  "testPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "displayName": "Test Debug",
      "description": "Run tests in debug mode",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "release-with-tests",
      "configurePreset": "release-with-tests",
      "displayName": "Test Release",
      "description": "Run tests in release mode",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
